                        {{ item_name }}
                    </a>
                    <ul class="submenu__list">
                    {% for subitem_name, subitem in item.items() %}
                        <li class="submenu__item">
                            <a class="submenu__button" href="{{ subitem }}" title="{{ subitem_name }}">{{ subitem_name }}</a>
