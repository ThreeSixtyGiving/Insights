{% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
    <div class="flashes wrapper">
        {% for category, message in messages %}
        {% set message = message.split(':', maxsplit=1) %}
        <div class="box box--{% if category == 'error' %}red{% else %}teal{% endif %}"> 
            <h3 class="box__heading">{{ message[0] }}</h3>
            {% if message[1] %}<p>{{ message[1] }}</p>{% endif %}
        </div>
        {% endfor %}
    </div>
    {% endif %}
{% endwith %}